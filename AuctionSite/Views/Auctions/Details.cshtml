@model AuctionSite.Models.ViewModels.AuctionDetailsViewModel

@{
    ViewData["Title"] = "出品詳細";

    var isEnded = Model.Item.IsEnded;
    var remaining = Model.Item.RemainingTime;
}

<h1>出品詳細</h1>

@if (TempData["BidError"] != null)
{
    <div class="alert alert-danger">
        @TempData["BidError"]
    </div>
}

@if (TempData["BidMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["BidMessage"]
    </div>
}

<div class="card mb-4">
    <div class="card-body">
        @* 画像 *@
        @if (!string.IsNullOrEmpty(Model.Item.ImageFileName))
        {
            <div class="mb-3 text-center">
                <img src="~/uploads/@Model.Item.ImageFileName"
                     class="img-fluid rounded"
                     style="max-height:300px; object-fit:contain;" />
            </div>
        }

        <h3 class="card-title">@Model.Item.Title</h3>

        <dl class="row mt-3">
            <dt class="col-sm-3">説明</dt>
            <dd class="col-sm-9">@Model.Item.Description</dd>

            <dt class="col-sm-3">開始価格</dt>
            <dd class="col-sm-9">@Model.Item.StartPrice.ToString("0.00")</dd>

            <dt class="col-sm-3">現在価格</dt>
            <dd class="col-sm-9">@Model.CurrentPrice.ToString("0.00")</dd>

            <dt class="col-sm-3">終了日時</dt>
            <dd class="col-sm-9">
                @Model.Item.EndTime.ToString("yyyy/MM/dd HH:mm")
            </dd>

            <dt class="col-sm-3">ステータス</dt>
            <dd class="col-sm-9">
                @if (isEnded)
                {
                    <span class="badge bg-secondary">終了</span>
                }
                else
                {
                    <span class="badge bg-success">出品中</span>
                    @if (remaining != null)
                    {
                        <span class="ms-2">
                            残り @remaining.Value.Days 日 @remaining.Value.Hours 時間
                        </span>
                    }
                }
            </dd>
        </dl>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <h3>入札履歴</h3>

        @if (Model.Bids.Any())
        {
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>入札者</th>
                        <th>金額</th>
                        <th>日時</th>
                    </tr>
                </thead>
                <tbody>
                @foreach (var bid in Model.Bids)
                {
                    <tr>
                        <td>@bid.BidderName</td>
                        <td>@bid.Amount.ToString("0.00")</td>
                        <td>@bid.CreatedAt.AddHours(9).ToString("yyyy/MM/dd HH:mm")</td>
                    </tr>
                }
                </tbody>
            </table>
        }
        else
        {
            <p>まだ入札はありません。</p>
        }
    </div>

    <div class="col-md-6 mb-4">
        <h3>入札する</h3>

        @if (isEnded)
        {
            <div class="alert alert-secondary">
                このオークションは終了しました。新しい入札はできません。
            </div>
        }
        else if (User.Identity?.IsAuthenticated ?? false)
        {
            <p class="text-secondary mb-2">
                @User.Identity!.Name さんとして入札します。
            </p>

            <form asp-action="PlaceBid" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="auctionItemId" value="@Model.Item.Id" />

                <div class="mb-3">
                    <label class="form-label">入札金額</label>
                    <input type="number" step="1" name="amount" class="form-control" />
                </div>

                <button type="submit" class="btn btn-primary">入札する</button>
            </form>
        }
        else
        {
            <div class="alert alert-warning">
                入札するにはログインが必要です。
                <a asp-controller="Account" asp-action="Login">ログイン</a>してください。
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">一覧へ戻る</a>
    <a asp-action="Edit" asp-route-id="@Model.Item.Id" class="btn btn-outline-primary ms-2">編集</a>
</div>

@section Scripts {
    @* クライアント側バリデーション *@
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/auctionHub")
            .withAutomaticReconnect()
            .build();

        connection.on("AuctionUpdated", function () {
            setTimeout(function () {
                location.reload();
            }, 300);
        });

        connection.start().catch(err => console.error(err.toString()));
    </script>
}
